{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "babel.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
